		"svelte-check": "^2.2.10",
		"svelte-loading-spinners": "^0.1.7",
		"svelte-preprocess": "^4.9.8",
		"svelte-web3": "^2.3.3",
		"tailwindcss": "^2.2.19",
		"tslib": "^2.3.1",
		"typescript": "^4.5.2",
		"walletlink": "^2.2.10",
		"web3modal": "^1.9.4"
	},
	"type": "module",
	"dependencies": {
		"svelte-drag": "^2.2.1"
	}
}
